<div class="column is-half">
    <% if user_signed_in? %>
        <article class="media box">
            <figure class="media-left">
                <figure class="image is-64x64">
            <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
          </figure>
            </figure>
            <div class="media-content">
              
            </div>
        </article>
    <% else %>
    <% end %>
    <% if user_signed_in? %>
    <% @articles.each do | article | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
            <%= gravatar_image_tag(article.user.email, size: 64, alt: article.user.name) %>
          </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong><%= article.user.try(:name) %></strong><br />
                    <small>@<%= article.user.try(:username) %></small><br/>
                    <p><%= article.title %></p>
                    <p><%= simple_format article.body %></p>
                </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <% if user_signed_in? && current_user.id == article.user_id %>
                        <%= link_to article, class: "level-item" do %>
                          <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_article_path(article), class: "level-item" do %>
                          <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= button_to article, method: :delete, data: { confirm: "Are you sure you want to delete this article?" } do %>
                                <div class="control is-danger">Delete</div>
                        <% end %>
                    </div>
                </nav>
          <% end %>
            </div>
        </article>
    </div>
    <% end %>
    <% else %>
    <% @articles.each do | article | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-32x32">
					<img src="https://bulma.io/images/placeholders/64x64.png">
				</figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <p><%= article.title %></p>
                    <p><%= simple_format article.body %></p>
                </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <% if user_signed_in? && current_user.id == article.user_id %>
                        <%= link_to article, class: "level-item" do %>
                          <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_article_path(article), class: "level-item" do %>
                          <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= button_to article, method: :delete, data: { confirm: "Are you sure you want to delete this article?" } do %>
                                <div class="control is-danger">Delete</div>
                        <% end %>
                    </div>
                </nav>
          <% end %>
            </div>
        </article>
    </div>
    <% end %>
  <% end %>
  </div>